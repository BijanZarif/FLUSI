#!/bin/bash

VDFNAM="flusi.vdf"
vdfcreate -dimension 32x96x32 -numts 51 -level 10 -varnames ux:uy:uz:vorx:vory:vorz:vorabs:p:mask ${VDFNAM}


for PRE in {'ux','uy','uz','p','vorx','vory','vorz','vorabs','mask'}
do
    VNAM=${PRE}
    FLIST=$( ls ${VNAM}_*.binary )
    N=0
    for FICH in ${FLIST}
    do
	echo ${N}
	echo ${FICH}
	raw2vdf -ts ${N} -varname ${VNAM} ${VDFNAM} ${FICH} 
	N=$((N+1))
    done
done

